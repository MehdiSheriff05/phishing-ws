{
  "manifest_version": 3,
  "name": "Phish Guard Prototype",
  "version": "0.1.0",
  "description": "Analyze current email or webpage content for phishing risk.",
  "icons": {
    "128": "icon128.png"
  },
  "permissions": ["activeTab", "storage", "scripting", "notifications"],
  "host_permissions": [
    "http://127.0.0.1:5000/*",
    "http://localhost:5000/*",
    "https://mail.google.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Phish Guard",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
